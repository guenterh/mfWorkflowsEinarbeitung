<?xml version="1.0" encoding="UTF-8"?>

<metamorph xmlns="http://www.culturegraph.org/metamorph" version="1">

	<rules>

		<entity name="bf:Work" flushWith="record" >
			<data name="@id" source="id" >
				<unique part="value" />
			</data>
			<entity name="bf:hasInstance">
				<data source="instance" name="@id" />
			</entity>
			<entity name="dct:contributor">
				<data source="contributor0" name="@id" >
				<!--OPTION:
				<unique part="value" />
				-->
				</data>
			</entity>
			<entity name="dct:contributor">
				<data source="contributor1" name="@id" >
				<!--OPTION:
				<unique part="value" />
				-->
				</data>
			</entity>
			<data name="dct:title" source="title" >
				<!--OPTION (removes ~8,3% of title fields):
				<unique part="value" />
				-->
			</data>
		</entity>

	</rules>

	<maps />

</metamorph>
